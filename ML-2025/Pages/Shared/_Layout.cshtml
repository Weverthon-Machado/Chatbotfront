@* _Layout.cshtml *@
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ML_2025 Chatbot</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ML_2025.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-white" asp-area="" asp-page="/Index">
                    🤖 ML_2025 Chatbot
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Chat">Chat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Sobre">Sobre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Privacy">Privacidade</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Conteúdo principal -->
    <main class="container my-4">
        <div class="pb-3">
            @RenderBody()
        </div>
    </main>

    <!-- Área do Chat -->
    <section class="container mb-5">
        <div class="card shadow-sm rounded-3 border-0">
            <div class="card-header bg-primary text-white fw-bold">
                Chatbot ML_2025
            </div>
            <div class="card-body" id="chat-container" style="height: 300px; overflow-y: auto;">
                <!-- Mensagens do chat aparecerão aqui -->
            </div>
            <div class="card-footer d-flex align-items-center">
                <input type="text" id="userMessage" class="form-control me-2" placeholder="Digite sua mensagem..." />
                <button class="btn btn-primary px-4" id="sendMessage">Enviar</button>
            </div>
        </div>
    </section>

    <!-- Rodapé -->
    <footer class="border-top footer text-muted py-3 mt-auto">
        <div class="container text-center small">
            &copy; 2025 - ML_2025 Chatbot ·
            <a asp-area="" asp-page="/Privacy" class="text-decoration-none text-primary">Política de Privacidade</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Simulação de Chatbot Local
        $(document).ready(function () {
            const chatContainer = $("#chat-container");
            const input = $("#userMessage");

            $("#sendMessage").click(function () {
                const msg = input.val().trim();
                if (!msg) return;

                // Adiciona mensagem do usuário
                chatContainer.append(`<div class="text-end my-1">
                        <span class="badge bg-secondary">${msg}</span>
                    </div>`);
                input.val("");

                // Resposta simulada do chatbot
                setTimeout(() => {
                    chatContainer.append(`<div class="text-start my-1">
                            <span class="badge bg-primary">🤖 Olá! Você disse: ${msg}</span>
                        </div>`);
                    chatContainer.scrollTop(chatContainer[0].scrollHeight);
                }, 600);
            });

            // Enviar com Enter
            input.on("keypress", function (e) {
                if (e.which === 13) {
                    $("#sendMessage").click();
                    return false;
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
